{
  "name": "Employee_Leave_Management_Tool",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/hana-client": "^2.27.19",
    "@sap/xssec": "^4.12.1",
    "express": "^4",
    "hdb": "^2.26.4",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "@sap/hdi-deploy": "4.9.5",
    "cds-plugin-ui5": "^0.13.0",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-leave_mgmt": "cds watch --open leavemgmt/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy Employee_Leave_Management_Tool --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "private": true,
  "cds": {
    "server": {
      "index": true
    },
    "requires": {
      "db": "hana"
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "workspaces": [
    "app/*"
  ]
}
